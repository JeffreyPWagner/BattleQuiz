<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.battlequiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.battlequiz.HomeScreenActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_login"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.battlequiz.HomeScreenActivity" />
        </activity>
        <activity android:name=".LeaderBoardActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PostGameActivity"
            android:label="@string/title_activity_post_quiz"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".QuizCompleteActivity"
            android:label="@string/title_activity_quiz_complete"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SpaceInvadersActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity
            android:name=".TakeQuizActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_take_quiz"
            android:theme="@style/AppTheme" />
        <activity android:name=".CreateQuestionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreateQuizActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>